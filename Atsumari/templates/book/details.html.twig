{% extends 'base.html.twig' %}

{% block title %}Book details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/book_details.css') }}">
{% endblock %}

{% block body_class %}flex-row-center-center body-popup{% endblock %}

{%  block navbar %}{% endblock %}

{% block content %}
    <div class="popup flex-column-space-around-center">
        <h1>Book details</h1>
        <div class="book-details flex-column-space-around-center">
            <div class="bookcover flex-row-center-center">
                <img src="{{ book.coverUrl }}" class="cover-img" alt="">
            </div>
            <div class="flex-column-space-around-center details-container">
                <div>
                    <p>Title:</p>
                    <p id="title" class="details-text">{{ book.title }}</p>
                </div>
                <div>
                    <p>Author:</p>
                    <p id="author" class="details-text">{{ book.author }}</p>
                </div>
                <div>
                    <p>Pages:</p>
                    <p id="num-of-pages" class="details-text">{{ book.numOfPages }}</p>
                </div>
                <div>
                    <p>Genre:</p>
                    <p id="genre" class="details-text">{{ book.genre }}</p>
                </div>
            </div>
        </div>
        {% if isCurrentBook %}
            <a href="{{ path('reading_session', { 'id': book.id }) }}" class="popup-light-btn">Continue Reading</a>
            <a href="{{ path('collection') }}" class="popup-cancel-btn light">Close</a>
        {% elseif existsCurrentBook %}
            <a href="{{ path('collection') }}" class="popup-light-btn">Close</a>
        {% else %}
            <a href="{{ path('reading_session', { 'id': book.id }) }}" class="popup-light-btn">Start Reading</a>
            <a href="{{ path('collection') }}" class="popup-cancel-btn light">Close</a>
        {% endif %}
        <button class="popup-cancel-btn light" id="delete-btn" data-id="{{ book.id }}">Delete Book</button>
    </div>
{% endblock %}


